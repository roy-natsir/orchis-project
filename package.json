{
  "name": "orcis-portfolio",
  "version": "1.0.0",
  "description": "Web3 Portfolio DApp dengan Smart Contracts, Frontend Next.js, dan Subgraph",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "dev": "pnpm --filter @orchis/frontend dev",
    "build": "pnpm --filter @orchis/frontend build",
    "contracts:build": "cd packages/contracts && forge build",
    "contracts:test": "cd packages/contracts && forge test",
    "contracts:deploy": "cd packages/contracts && forge script script/Deploy.s.sol",
    "subgraph:build": "cd packages/subgraph && graph build",
    "subgraph:deploy": "cd packages/subgraph && graph deploy",
    "clean": "rm -rf node_modules packages/*/node_modules packages/contracts/out packages/contracts/cache packages/subgraph/build packages/subgraph/generated packages/frontend/.next"
  },
  "keywords": [
    "web3",
    "portfolio",
    "dapp",
    "ethereum",
    "solidity",
    "nextjs",
    "thegraph"
  ],
  "author": "Roy Natsir",
  "license": "MIT",
  "devDependencies": {
    "pnpm": "^8.0.0",
    "prettier": "^3.6.2",
    "sass": "^1.92.1",
    "stylelint": "^16.23.1",
    "stylelint-config-standard": "^39.0.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}
